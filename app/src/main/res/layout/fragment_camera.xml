<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graytransparent"
    tools:context=".CameraFragment">

    <!-- TODO: Update blank fragment layout -->

    <!--機能-->

    <view
        android:id="@+id/boaderLine01"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PictureTaking" />

    <view
        android:id="@+id/boaderLine02"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/PictureTaking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BarcodeReading"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/barcodeReading"
        app:layout_constraintBottom_toTopOf="@+id/boaderLine02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/PictureTaking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/takePicture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PictureUsing"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="@string/usePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boaderLine01" />

</androidx.constraintlayout.widget.ConstraintLayout>